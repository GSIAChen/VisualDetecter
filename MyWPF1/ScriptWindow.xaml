<Window x:Class="MyWPF1.ScriptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWPF1"
        mc:Ignorable="d"
        Title="ScriptWindow" Height="450" Width="800">
    <Grid Background="AntiqueWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <!-- Camera Labels -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="1号相机" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="2号相机" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="3号相机" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="3" Text="4号相机" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="4" Text="5号相机" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="5" Text="6号相机" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="6" Text="7号相机" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center"/>

        <!-- Load .hdev Buttons -->
        <Button Grid.Row="1" Grid.Column="0" Content="加载脚本" Margin="5" Click="LoadScript_Click" Tag="0" />
        <Button Grid.Row="1" Grid.Column="1" Content="加载脚本" Margin="5" Click="LoadScript_Click" Tag="1" />
        <Button Grid.Row="1" Grid.Column="2" Content="加载脚本" Margin="5" Click="LoadScript_Click" Tag="2" />
        <Button Grid.Row="1" Grid.Column="3" Content="加载脚本" Margin="5" Click="LoadScript_Click" Tag="3" />
        <Button Grid.Row="1" Grid.Column="4" Content="加载脚本" Margin="5" Click="LoadScript_Click" Tag="4" />
        <Button Grid.Row="1" Grid.Column="5" Content="加载脚本" Margin="5" Click="LoadScript_Click" Tag="5" />
        <Button Grid.Row="1" Grid.Column="6" Content="加载脚本" Margin="5" Click="LoadScript_Click" Tag="6" />

        <!-- ListBoxes -->
        <ListBox Grid.Row="2" Grid.Column="0" ItemsSource="{Binding Scripts[0]}" Margin="5" />
        <ListBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Scripts[1]}" Margin="5" />
        <ListBox Grid.Row="2" Grid.Column="2" ItemsSource="{Binding Scripts[2]}" Margin="5" />
        <ListBox Grid.Row="2" Grid.Column="3" ItemsSource="{Binding Scripts[3]}" Margin="5" />
        <ListBox Grid.Row="2" Grid.Column="4" ItemsSource="{Binding Scripts[4]}" Margin="5" />
        <ListBox Grid.Row="2" Grid.Column="5" ItemsSource="{Binding Scripts[5]}" Margin="5" />
        <ListBox Grid.Row="2" Grid.Column="6" ItemsSource="{Binding Scripts[6]}" Margin="5" />

        <!-- Run Buttons -->
        <Button Grid.Row="3" Grid.Column="0" Content="执行脚本" Margin="5" Click="RunScripts_Click" Tag="0" />
        <Button Grid.Row="3" Grid.Column="1" Content="执行脚本" Margin="5" Click="RunScripts_Click" Tag="1" />
        <Button Grid.Row="3" Grid.Column="2" Content="执行脚本" Margin="5" Click="RunScripts_Click" Tag="2" />
        <Button Grid.Row="3" Grid.Column="3" Content="执行脚本" Margin="5" Click="RunScripts_Click" Tag="3" />
        <Button Grid.Row="3" Grid.Column="4" Content="执行脚本" Margin="5" Click="RunScripts_Click" Tag="4" />
        <Button Grid.Row="3" Grid.Column="5" Content="执行脚本" Margin="5" Click="RunScripts_Click" Tag="5" />
        <Button Grid.Row="3" Grid.Column="6" Content="执行脚本" Margin="5" Click="RunScripts_Click" Tag="6" />
    </Grid>
</Window>
