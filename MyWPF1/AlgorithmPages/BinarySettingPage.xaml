<UserControl x:Class="MyWPF1.BinarySettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyWPF1" 
      xmlns:models="clr-namespace:MyWPF1.Models"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:viewModels="clr-namespace:MyWPF1.ViewModels"
      xmlns:winforms="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
      xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
      xmlns:ctrl="clr-namespace:MyWPF1.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#1E1E1E">

    <UserControl.Resources>
        <!-- 深色主题资源 -->
        <SolidColorBrush x:Key="DarkBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="MediumBackground" Color="#23272E"/>
        <SolidColorBrush x:Key="LightBackground" Color="#2D2D30"/>
        <SolidColorBrush x:Key="AccentColor" Color="#007ACC"/>
        <SolidColorBrush x:Key="AccentHover" Color="#0086D1"/>
        <SolidColorBrush x:Key="AccentPressed" Color="#005A9E"/>
        <SolidColorBrush x:Key="TextColor" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SubTextColor" Color="#A0A0A0"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3F3F46"/>
        <SolidColorBrush x:Key="InputBackground" Color="#23272E"/>

        <!-- 标题卡片样式 -->
        <Style x:Key="TitleCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2D8CF0" Offset="0"/>
                        <GradientStop Color="#007ACC" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#66000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- 内容卡片样式 -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="{StaticResource LightBackground}"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
            <Setter Property="Padding" Value="20,18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#33000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- 标题文本样式 -->
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="18,0,0,0"/>
        </Style>
        <!-- 标签文本样式 -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!-- 复选框美化 -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="box" Width="20" Height="20" CornerRadius="4" BorderThickness="2" BorderBrush="{StaticResource AccentColor}" Background="{StaticResource InputBackground}">
                                <Path x:Name="check" Data="M 4 10 L 9 15 L 16 6" Stroke="{StaticResource AccentColor}" StrokeThickness="2" Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="box" Property="Background" Value="{StaticResource AccentColor}"/>
                                <Setter TargetName="check" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="box" Property="BorderBrush" Value="{StaticResource AccentHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- 滑块美化 -->
        <Style TargetType="Slider">
            <Setter Property="Background" Value="{StaticResource LightBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <!-- 文本框美化 -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="#4A4A50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <!-- 组合框美化 -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="#4A4A50"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30" Background="{StaticResource MediumBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <!-- 全局阈值标题卡片 -->
        <Border Style="{StaticResource TitleCard}" Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Text="全局阈值" Style="{StaticResource TitleText}"/>
        </Border>
        <!-- 全局阈值内容卡片 -->
        <Border Style="{StaticResource Card}" Grid.Row="1" VerticalAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <CheckBox Content="启用全局阈值" IsChecked="{Binding EnableGlobalThreshold}" HorizontalAlignment="Left"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Text="阈值范围：" Style="{StaticResource LabelText}"/>
                    <Slider Minimum="0" Maximum="255" Width="120" Value="{Binding GlobalThreshold, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <ctrl:NumericUpDown Value="{Binding GlobalThreshold, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Increment="1" Width="55" Height="25"
                                        Background="{StaticResource InputBackground}"
                                        Foreground="{StaticResource TextColor}"
                                        BorderBrush="#4A4A50"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- 自适应阈值标题卡片 -->
        <Border Style="{StaticResource TitleCard}" Grid.Row="2" VerticalAlignment="Center">
            <TextBlock Text="自适应阈值" Style="{StaticResource TitleText}"/>
        </Border>
        <!-- 自适应阈值内容卡片 -->
        <Border Style="{StaticResource Card}" Grid.Row="3" VerticalAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <CheckBox Content="启用自适应阈值" IsChecked="{Binding EnableLocalThreshold}" HorizontalAlignment="Left"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <TextBlock Text="阈值类型：" Style="{StaticResource LabelText}"/>
                        <ComboBox Width="120" Height="30" ItemsSource="{Binding ColorOptions}" SelectedItem="{Binding LightDark}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="局部核大小：" Style="{StaticResource LabelText}" Grid.Column="0"/>
                        <Slider Grid.Column="1" Minimum="3" Maximum="51" TickFrequency="2" IsSnapToTickEnabled="True" Height="25" VerticalAlignment="Center" Value="{Binding MaskSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <ctrl:NumericUpDown Grid.Column="2" Value="{Binding MaskSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Minimum="3" Maximum="51" Increment="1" Width="55" Height="25"
                                            Background="{StaticResource InputBackground}"
                                            Foreground="{StaticResource TextColor}"
                                            BorderBrush="#4A4A50"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="比例因子：" Style="{StaticResource LabelText}" Grid.Column="0"/>
                        <Slider Grid.Column="1" Minimum="0.1" Maximum="2.0" TickFrequency="0.02" IsSnapToTickEnabled="True" Height="25" VerticalAlignment="Top" Value="{Binding Scale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,2,0,0"/>
                        <ctrl:NumericUpDown Grid.Column="2" Value="{Binding Scale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Minimum="0.1" Maximum="2.0" Increment="0.02" Width="55" Height="25"
                                            Background="{StaticResource InputBackground}"
                                            Foreground="{StaticResource TextColor}"
                                            BorderBrush="#4A4A50" Margin="23,-2,-23,2" RenderTransformOrigin="0.37,0.706"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>