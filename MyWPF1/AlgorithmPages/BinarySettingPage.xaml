<UserControl x:Class="MyWPF1.BinarySettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyWPF1" xmlns:models="clr-namespace:MyWPF1.Models"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:viewModels="clr-namespace:MyWPF1.ViewModels"
             mc:Ignorable="d" 
      xmlns:winforms="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
      xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             d:DesignHeight="450" d:DesignWidth="800" Background="AntiqueWhite">
    <UserControl.Resources>
        <local:IndexConverter x:Key="IndexConverter"/>
        <local:ComboBoxIndexConverter x:Key="ComboBoxIndexConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ContentControl x:Name="SettingsContainer">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <ContentPresenter Content="{TemplateBinding Content}">
                        <ContentPresenter.RenderTransform>
                            <TranslateTransform X="300"/>
                        </ContentPresenter.RenderTransform>
                        <ContentPresenter.Triggers>
                            <EventTrigger RoutedEvent="ContentPresenter.Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                    Storyboard.TargetProperty="RenderTransform.X"
                                    From="300" To="0" 
                                    Duration="0:0:0.3"
                                    DecelerationRatio="0.6"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ContentPresenter.Triggers>
                    </ContentPresenter>
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
        <!-- 基本属性 -->
        <Border Background="Beige"></Border>
        <!-- 二值阈 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,5">
            <TextBlock Text="阈值范围：" Width="80" VerticalAlignment="Center"/>
            <Slider Minimum="0" Maximum="255" x:Name="sliderThreshold" VerticalAlignment="Center"
                        Width="200" Value="{Binding Threshold, 
                        Mode=TwoWay, 
                        UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding Threshold}" 
                       Width="40" 
                       Margin="10,0"
                       VerticalAlignment="Center"/>
        </StackPanel>

            <!-- 粒子筛选 -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="15,5">
                <TextBlock Text="粒子大小：" Width="80"/>
                <Slider Minimum="0" Maximum="255" Width="200" Value="200"/>
                <TextBox Width="60" Margin="10,0" Text="200"/>
            </StackPanel>

            <!-- 查找参数 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="15,5">
                <TextBlock Text="最小距离：" Width="80"/>
                <TextBox Width="60" Text="10"/>
                <TextBlock Text="最大距离：" Width="80" Margin="20,0,0,0"/>
                <TextBox Width="60" Text="20"/>
            </StackPanel>

            <!-- 边缘处理 -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="15,5">
                <CheckBox IsChecked="True"/>
                <TextBlock Text="平滑处理" Margin="5,0"/>
                <CheckBox IsChecked="False" Margin="20,0,0,0"/>
                <TextBlock Text="锐化处理" Margin="5,0"/>
            </StackPanel>

            <!-- 填充 -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="15,5">
                <CheckBox IsChecked="False"/>
                <TextBlock Text="自动填充" Margin="5,0"/>
                <CheckBox IsChecked="True" Margin="20,0,0,0"/>
                <TextBlock Text="手动填充" Margin="5,0"/>
            </StackPanel>

            <!-- 辅助功能 -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="15,5">
                <CheckBox IsChecked="True"/>
                <TextBlock Text="日志记录" Margin="5,0"/>
                <CheckBox IsChecked="True" Margin="20,0,0,0"/>
                <TextBlock Text="自动保存" Margin="5,0"/>
            </StackPanel>
        </Grid>
</UserControl>
