<UserControl x:Class="MyWPF1.LineFittingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyWPF1" xmlns:models="clr-namespace:MyWPF1.Models"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:viewModels="clr-namespace:MyWPF1.ViewModels"
             mc:Ignorable="d" 
             xmlns:winforms="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
             xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             xmlns:ctrl="clr-namespace:MyWPF1.Controls"
             d:DesignHeight="450" d:DesignWidth="800" Background="#23272E">
    <UserControl.Resources>
        <local:IndexConverter x:Key="IndexConverter"/>
        <local:ComboBoxIndexConverter x:Key="ComboBoxIndexConverter"/>
        <SolidColorBrush x:Key="DarkBackground" Color="#23272E"/>
        <SolidColorBrush x:Key="CardBackground" Color="#21232B"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4DACFF"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3A3F4B"/>
        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Background" Value="#2D313A"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A3F4B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentColor}"/>
            <Setter Property="Height" Value="28"/>
        </Style>
        
        <Style TargetType="Slider">
            <Setter Property="Background" Value="#23272E"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="Height" Value="22"/>
        </Style>
        
        <Style TargetType="ctrl:NumericUpDown">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="28"/>
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="28"/>
        </Style>
        
        <Style TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
        <StackPanel>
            <!-- 直线拟合方法 -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="8" Margin="0,0,0,15">
                <StackPanel Margin="15">
                    <TextBlock Text="直线拟合方法" FontWeight="Bold" FontSize="15" Foreground="{StaticResource AccentColor}" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 拟合方法 -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="拟合方法：" Style="{StaticResource LabelText}" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding FittingMethods}" 
                                      SelectedItem="{Binding SelectedFittingMethod}"
                                      Width="150" HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                        <!-- 最小点数 -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="最小点数：" Style="{StaticResource LabelText}" Margin="0,0,0,5"/>
                            <ctrl:NumericUpDown Value="{Binding MinPoints}" Minimum="2" Maximum="100" 
                                                Width="120" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- 阈值设置 -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="8" Margin="0,0,0,15">
                <StackPanel Margin="15">
                    <TextBlock Text="阈值设置" FontWeight="Bold" FontSize="15" Foreground="{StaticResource AccentColor}" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 距离阈值 -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="距离阈值：" Style="{StaticResource LabelText}" Margin="0,0,0,5"/>
                            <Slider Minimum="0" Maximum="50" Value="{Binding DistanceThreshold}" 
                                    Width="150" HorizontalAlignment="Left"/>
                            <ctrl:NumericUpDown Value="{Binding DistanceThreshold}" Minimum="0" Maximum="50" 
                                                Width="80" HorizontalAlignment="Left" Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <!-- 角度阈值 -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="角度阈值：" Style="{StaticResource LabelText}" Margin="0,0,0,5"/>
                            <Slider Minimum="0" Maximum="90" Value="{Binding AngleThreshold}" 
                                    Width="150" HorizontalAlignment="Left"/>
                            <ctrl:NumericUpDown Value="{Binding AngleThreshold}" Minimum="0" Maximum="90" 
                                                Width="80" HorizontalAlignment="Left" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- 拟合结果 -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="8">
                <StackPanel Margin="15">
                    <TextBlock Text="拟合结果" FontWeight="Bold" FontSize="15" Foreground="{StaticResource AccentColor}" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 直线数量 -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="直线数量：" Style="{StaticResource LabelText}" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding LineCount}" FontWeight="SemiBold" 
                                       Foreground="{StaticResource AccentColor}" HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                        <!-- 拟合精度 -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="拟合精度：" Style="{StaticResource LabelText}" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding FittingAccuracy}" FontWeight="SemiBold" 
                                       Foreground="{StaticResource AccentColor}" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
