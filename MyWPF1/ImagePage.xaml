<UserControl x:Class="MyWPF1.ImagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyWPF1" xmlns:models="clr-namespace:MyWPF1.Models"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:viewModels="clr-namespace:MyWPF1.ViewModels"
             mc:Ignorable="d" 
      xmlns:winforms="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
      xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" xmlns:halcon="http://schemas.mvtec.com/halcondotnet"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:IndexConverter x:Key="IndexConverter"/>
        <local:ComboBoxIndexConverter x:Key="ComboBoxIndexConverter"/>
    </UserControl.Resources>
    <Grid>
        <winforms:WindowsFormsHost x:Name="winFormsHost"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch">
            <halcon:HWindowControl x:Name="hWindowControl" 
                                   Dock="Fill"/>
        </winforms:WindowsFormsHost>
    </Grid>
</UserControl>
