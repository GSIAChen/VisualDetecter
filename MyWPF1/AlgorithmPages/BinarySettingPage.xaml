<UserControl x:Class="MyWPF1.BinarySettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyWPF1" 
      xmlns:models="clr-namespace:MyWPF1.Models"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:viewModels="clr-namespace:MyWPF1.ViewModels"
      xmlns:winforms="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
      xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
      xmlns:ctrl="clr-namespace:MyWPF1.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#23272E">

    <UserControl.Resources>
        <local:IndexConverter x:Key="IndexConverter"/>
        <local:ComboBoxIndexConverter x:Key="ComboBoxIndexConverter"/>
        <SolidColorBrush x:Key="DarkBackground" Color="#23272E"/>
        <SolidColorBrush x:Key="CardBackground" Color="#21232B"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4DACFF"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3A3F4B"/>
        <SolidColorBrush x:Key="InputBackground" Color="#2D2D30"/>
        <SolidColorBrush x:Key="ButtonBackground" Color="#2D313A"/>
        <SolidColorBrush x:Key="ButtonHover" Color="#3A3F4B"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Background" Value="{StaticResource ButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ButtonHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentColor}"/>
            <Setter Property="Height" Value="28"/>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Background" Value="#23272E"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="Height" Value="22"/>
        </Style>

        <Style TargetType="ctrl:NumericUpDown">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="28"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="28"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>

        <Style TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
        <StackPanel>
            <!-- 全局阈值设置 -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="8" Margin="0,0,0,15">
                <StackPanel Margin="15">
                    <TextBlock Text="全局阈值设置" FontWeight="Bold" FontSize="15" Foreground="{StaticResource AccentColor}" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 最小阈值 -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="最小阈值：" Style="{StaticResource LabelText}" Margin="0,0,0,5"/>
                            <Slider Minimum="0" Maximum="255" Value="{Binding MinThreshold}" 
                                    Width="150" HorizontalAlignment="Left"/>
                            <ctrl:NumericUpDown Value="{Binding MinThreshold}" Minimum="0" Maximum="255" 
                                                Width="80" HorizontalAlignment="Left" Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <!-- 最大阈值 -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="最大阈值：" Style="{StaticResource LabelText}" Margin="0,0,0,5"/>
                            <Slider Minimum="0" Maximum="255" Value="{Binding MaxThreshold}" 
                                    Width="150" HorizontalAlignment="Left"/>
                            <ctrl:NumericUpDown Value="{Binding MaxThreshold}" Minimum="0" Maximum="255" 
                                                Width="80" HorizontalAlignment="Left" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 二值化方法设置 -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="8" Margin="0,0,0,15">
                <StackPanel Margin="15">
                    <TextBlock Text="二值化方法" FontWeight="Bold" FontSize="15" Foreground="{StaticResource AccentColor}" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 二值化类型 -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="二值化类型：" Style="{StaticResource LabelText}" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding BinaryTypes}" 
                                      SelectedItem="{Binding SelectedBinaryType}"
                                      Width="150" HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                        <!-- 连接性 -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="连接性：" Style="{StaticResource LabelText}" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding ConnectivityTypes}" 
                                      SelectedItem="{Binding SelectedConnectivity}"
                                      Width="150" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 形态学操作设置 -->
            <Border Background="{StaticResource CardBackground}" CornerRadius="8">
                <StackPanel Margin="15">
                    <TextBlock Text="形态学操作" FontWeight="Bold" FontSize="15" Foreground="{StaticResource AccentColor}" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 开运算 -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <CheckBox Content="开运算" IsChecked="{Binding UseOpening}" Margin="0,0,0,5"/>
                            <TextBlock Text="开运算核大小：" Style="{StaticResource LabelText}" Margin="0,0,0,5"/>
                            <ctrl:NumericUpDown Value="{Binding OpeningKernelSize}" Minimum="1" Maximum="50" 
                                                Width="80" HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                        <!-- 闭运算 -->
                        <StackPanel Grid.Column="1">
                            <CheckBox Content="闭运算" IsChecked="{Binding UseClosing}" Margin="0,0,0,5"/>
                            <TextBlock Text="闭运算核大小：" Style="{StaticResource LabelText}" Margin="0,0,0,5"/>
                            <ctrl:NumericUpDown Value="{Binding ClosingKernelSize}" Minimum="1" Maximum="50" 
                                                Width="80" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>