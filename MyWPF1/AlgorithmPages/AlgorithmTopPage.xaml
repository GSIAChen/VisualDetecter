<UserControl x:Class="MyWPF1.AlgorithmTopPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyWPF1" xmlns:models="clr-namespace:MyWPF1.Models"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:viewModels="clr-namespace:MyWPF1.ViewModels" d:DataContext="{d:DesignInstance Type=local:AlgorithmTopPage}"
             mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="#23272E">
    <UserControl.Resources>
        <local:IndexConverter x:Key="IndexConverter"/>
        <local:ComboBoxIndexConverter x:Key="ComboBoxIndexConverter"/>
        <!-- 深色主题样式 -->
        <SolidColorBrush x:Key="CardBackground" Color="#21232B"/>
        <SolidColorBrush x:Key="LightForeground" Color="#F3F6FA"/>
        <SolidColorBrush x:Key="ButtonBackground" Color="#2D313A"/>
        <SolidColorBrush x:Key="ButtonHover" Color="#3A3F4B"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3A3F4B"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4DACFF"/>
        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Background" Value="{StaticResource ButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ButtonHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="28"/>
        </Style>
        
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3A3F4B"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2F3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>
        
        <Style TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="{StaticResource CardBackground}" CornerRadius="8" Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#66000000"/>
            </Border.Effect>
            <TextBlock Text="基本属性" FontWeight="Bold" FontSize="16" Foreground="{StaticResource AccentColor}"
                       Margin="15,10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Border>
        
        <!-- 内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 工具名称 -->
            <Border Grid.Column="0" Background="{StaticResource CardBackground}" CornerRadius="8" Margin="5">
                <TextBlock Text="{Binding CurrentToolInstance.DisplayName}" 
                           FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource AccentColor}"
                           HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
            </Border>
            
            <!-- 图源选择和保存按钮 -->
            <StackPanel Grid.Column="1" Margin="5">
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="图源：" FontSize="13" Foreground="{StaticResource SecondaryText}"
                               HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="1" AlternationCount="1000" ItemsSource="{Binding FilteredSources}"
                              SelectedItem="{Binding SelectedSource, Mode=TwoWay}"
                              VerticalContentAlignment="Center" IsReadOnly="True">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}"/>
                        </ComboBox.ItemContainerStyle>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <ContentControl>
                                    <ContentControl.Resources>
                                        <DataTemplate DataType="{x:Type sys:String}">
                                            <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                        <DataTemplate DataType="{x:Type viewModels:SelectableItem}">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding 
                                                        RelativeSource={RelativeSource AncestorType=ComboBoxItem},
                                                        Path=(ItemsControl.AlternationIndex),
                                                        Converter={StaticResource ComboBoxIndexConverter}}"
                                                        VerticalAlignment="Center" Foreground="{StaticResource SecondaryText}"/>
                                                <TextBlock Text="{Binding Text}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ContentControl.Resources>
                                    <ContentPresenter Content="{Binding}"/>
                                </ContentControl>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
                <Button x:Name="SaveButton" Content="保存" Command="{Binding SaveCommand}"
                        HorizontalAlignment="Center" Width="80" Height="28"/>
            </StackPanel>
            
            <!-- 选项设置 -->
            <StackPanel Grid.Column="2" Margin="5">
                <CheckBox Content="屏蔽此项" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10"/>
                <CheckBox Content="显示输出" IsChecked="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>