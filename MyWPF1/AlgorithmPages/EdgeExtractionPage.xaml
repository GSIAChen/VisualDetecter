<UserControl x:Class="MyWPF1.EdgeExtractionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyWPF1" xmlns:models="clr-namespace:MyWPF1.Models"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:viewModels="clr-namespace:MyWPF1.ViewModels"
      mc:Ignorable="d" 
      xmlns:winforms="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
      xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
      xmlns:ctrl="clr-namespace:MyWPF1.Controls"
      d:DesignHeight="450" d:DesignWidth="800" Background="#1E1E1E">
    <UserControl.Resources>
        <!-- 深色主题资源 -->
        <SolidColorBrush x:Key="DarkBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="MediumBackground" Color="#23272E"/>
        <SolidColorBrush x:Key="LightBackground" Color="#2D2D30"/>
        <SolidColorBrush x:Key="AccentColor" Color="#007ACC"/>
        <SolidColorBrush x:Key="AccentHover" Color="#0086D1"/>
        <SolidColorBrush x:Key="AccentPressed" Color="#005A9E"/>
        <SolidColorBrush x:Key="TextColor" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SubTextColor" Color="#A0A0A0"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3F3F46"/>
        <!-- 卡片样式 -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="{StaticResource LightBackground}"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
            <Setter Property="Padding" Value="20,18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#33000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- 标题卡片样式 -->
        <Style x:Key="TitleCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4DACFF" Offset="0"/>
                        <GradientStop Color="#0080FF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#66000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- 标题文本样式 -->
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="18,0,0,0"/>
        </Style>
        <!-- 标签文本样式 -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!-- ComboBox样式 -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource LightBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
        <!-- Slider样式 -->
        <Style TargetType="Slider">
            <Setter Property="Background" Value="{StaticResource LightBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!-- 文本块样式 -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="30" Background="{StaticResource MediumBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 标题卡片 -->
        <Border Style="{StaticResource TitleCard}" Grid.Row="0">
            <TextBlock Text="边缘提取" Style="{StaticResource TitleText}"/>
        </Border>
        <!-- 内容卡片 -->
        <Border Style="{StaticResource Card}" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- 滤波器 -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="15,10" VerticalAlignment="Center">
                    <TextBlock Text="滤波器：" Width="120" Style="{StaticResource LabelText}"/>
                    <ComboBox Width="120" Height="30" VerticalContentAlignment="Center"
                              ItemsSource="{Binding FilterOptions}"
                              SelectedItem="{Binding Filter}"/>
                </StackPanel>
                <!-- 非极大值抑制 -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="15,10" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="非极大值抑制：" Width="120" Style="{StaticResource LabelText}"/>
                    <ComboBox Width="120" Height="30" VerticalContentAlignment="Center"
                              ItemsSource="{Binding NMSOptions}"
                              SelectedItem="{Binding NMS}"/>
                </StackPanel>
                <!-- Alpha值 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="15,10" VerticalAlignment="Center">
                    <TextBlock Text="Alpha值：" Width="80" Style="{StaticResource LabelText}"/>
                    <Slider Minimum="0.1" Maximum="2" Width="120" Value="{Binding Alpha, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <ctrl:NumericUpDown Value="{Binding Alpha, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Minimum="0.1" Maximum="2" Increment="0.02" Width="55" Height="25"/>
                </StackPanel>
                <!-- 低频阈 -->
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="15,10" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="低频阈：" Width="80" Style="{StaticResource LabelText}"/>
                    <Slider Minimum="10" Maximum="40" Width="120" Value="{Binding LowThreshold, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <ctrl:NumericUpDown Value="{Binding LowThreshold, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Increment="1" Width="55" Height="25"/>
                </StackPanel>
                <!-- 高频阈 -->
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="15,10" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="高频阈：" Width="80" Style="{StaticResource LabelText}"/>
                    <Slider Minimum="20" Maximum="80" Width="120" Value="{Binding HighThreshold, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <ctrl:NumericUpDown Value="{Binding HighThreshold, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Increment="1" Width="55" Height="25"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>                        UpdateSourceTrigger=PropertyChanged}"/>
