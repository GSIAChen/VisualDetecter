<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:MyWPF1.Controls">

    <!-- 深色主题颜色资源 -->
    <SolidColorBrush x:Key="DarkBackground" Color="#23272E"/>
    <SolidColorBrush x:Key="CardBackground" Color="#21232B"/>
    <SolidColorBrush x:Key="AccentColor" Color="#4DACFF"/>
    <SolidColorBrush x:Key="PrimaryText" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="BorderColor" Color="#3A3F4B"/>
    <SolidColorBrush x:Key="InputBackground" Color="#2D2D30"/>
    <SolidColorBrush x:Key="ButtonBackground" Color="#2D313A"/>
    <SolidColorBrush x:Key="ButtonHover" Color="#3A3F4B"/>

    <!-- 通用文本样式 -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <!-- 按钮样式 -->
    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        <Setter Property="Background" Value="{StaticResource ButtonBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ButtonHover}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 文本框样式 -->
    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        <Setter Property="Background" Value="{StaticResource InputBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="CaretBrush" Value="{StaticResource AccentColor}"/>
        <Setter Property="Height" Value="28"/>
    </Style>

    <!-- 滑块样式 -->
    <Style TargetType="Slider">
        <Setter Property="Background" Value="#23272E"/>
        <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
        <Setter Property="Height" Value="22"/>
    </Style>

    <!-- 数字输入框样式 -->
    <Style TargetType="ctrl:NumericUpDown">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        <Setter Property="Background" Value="{StaticResource InputBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Height" Value="28"/>
    </Style>

    <!-- 组合框样式 -->
    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Height" Value="28"/>
    </Style>

    <!-- 组合框项样式 -->
    <Style TargetType="ComboBoxItem">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#3A3F4B"/>
                            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2A2F3A"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 复选框样式 -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <!-- 边框样式 -->
    <Style TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <!-- 卡片标题样式 -->
    <Style x:Key="CardTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- 标签文本样式 -->
    <Style x:Key="LabelText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 值文本样式 -->
    <Style x:Key="ValueText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary> 