<Window x:Class="MyWPF1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Interface" Height="800" Width="1200">
    <Window.Resources>
        <!-- 按钮样式模板 -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                            <ContentPresenter
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C0C0C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Expander 统一样式 -->
        <Style TargetType="Expander">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   FontWeight="Bold"
                                   FontSize="14"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <DockPanel Background="White">
                                <ToggleButton x:Name="HeaderSite"
                                              DockPanel.Dock="Top"
                                              Content="{TemplateBinding Header}"
                                              ContentTemplate="{TemplateBinding HeaderTemplate}"
                                              IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                              />

                                <ContentPresenter x:Name="ExpandSite"
                                                  DockPanel.Dock="Bottom"
                                                  Visibility="Collapsed"/>
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- 展开按钮样式 -->
        <Style x:Key="ExpanderToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                Padding="10,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ContentPresenter Grid.Column="0"
                                                  VerticalAlignment="Center"/>

                                <Path x:Name="Arrow"
                                      Grid.Column="1"
                                      Width="12" Height="12"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      Fill="#FF444444"
                                      Data="M0,0 L4,4 8,0 Z"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <DockPanel Name="上工具栏"
                   Grid.Row="0" 
                   LastChildFill="False" 
                   Background="#81D8D0"
                   Height="80">

            <!-- 开始按钮 -->
            <Button Name="开始"
                    Click="StartButton_Click"
                    DockPanel.Dock="Left"
                    Style="{StaticResource IconButtonStyle}"
                    Margin="10,0">
                <StackPanel Orientation="Vertical">
                    <Image Source="Images/开始.png" 
                           Width="40"
                           Height="40"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="开始"
                               Margin="5,5,0,0"
                               FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- 停止按钮 -->
            <Button Name="停止"
                    Click="StopButton_Click"
                    DockPanel.Dock="Left"
                    Style="{StaticResource IconButtonStyle}"
                    Margin="10,0">
                <StackPanel Orientation="Vertical">
                    <Image Source="Images/停止.png" 
                           Width="40"
                           Height="40"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="停止"
                               Margin="5,5,0,0"
                               FontSize="14"/>
                </StackPanel>
            </Button>

            <Button Name="进料"
                    Click="ProductStartButton_Click"
                    DockPanel.Dock="Left"
                    Style="{StaticResource IconButtonStyle}"
                    Margin="10,0">
                <StackPanel Orientation="Vertical">
                    <Image Source="Images/开始.png" 
                           Width="40"
                           Height="40"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="进料"
                               Margin="5,5,0,0"
                               FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- 停止按钮 -->
            <Button Name="停止进料"
                    Click="ProductStopButton_Click"
                    DockPanel.Dock="Left"
                    Style="{StaticResource IconButtonStyle}"
                    Margin="10,0">
                <StackPanel Orientation="Vertical">
                    <Image Source="Images/停止.png" 
                           Width="40"
                           Height="40"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="停止进料"
                               Margin="5,5,0,0"
                               FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- 参数设置按钮 -->
            <Button Name="清料"
                    Click="ClearButton_Click"
                    DockPanel.Dock="Left"
                    Style="{StaticResource IconButtonStyle}"
                    Margin="10,0">
                <StackPanel Orientation="Vertical">
                   <Image Source="Images/停止.png" 
                        Width="40"
                        Height="40"
                        RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="清料"
                        Margin="5,5,0,0"
                        FontSize="14"/>
                 </StackPanel>
            </Button>

            <Button Name="脚本"
                    DockPanel.Dock="Left"
                    Click="ScriptButton_Click"
                    Style="{StaticResource IconButtonStyle}"
                    Margin="10,0">
                <StackPanel Orientation="Vertical">
                    <Image Source="Images/停止.png" 
                        Width="40"
                        Height="40"
                        RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="脚本"
                        Margin="5,5,0,0"
                        FontSize="14"/>
                </StackPanel>
            </Button>

            <Button Name="加载配置"
                    DockPanel.Dock="Left"
                    Style="{StaticResource IconButtonStyle}"
                    Margin="10,0">
                <StackPanel Orientation="Vertical">
                    <Image Source="Images/停止.png" 
                        Width="40"
                        Height="40"
                        RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="加载配置"
                        Margin="5,5,0,0"
                        FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- 参数设置按钮 -->
            <Button Name="算法"
                    Click="AlgorithmButton_Click"
                    DockPanel.Dock="Left"
                    Style="{StaticResource IconButtonStyle}"
                    Margin="10,0">
                <StackPanel Orientation="Vertical">
                    <Image Source="Images/停止.png" 
                        Width="40"
                        Height="40"
                        RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="算法"
                        Margin="5,5,0,0"
                        FontSize="14"/>
                </StackPanel>
            </Button>

            <Button Name="深度学习"
                    Click="LaunchLabelingTool_Click"
                    DockPanel.Dock="Left"
                    Style="{StaticResource IconButtonStyle}"
                    Margin="10,0">
                <StackPanel Orientation="Vertical">
                    <Image Source="Images/停止.png" 
                        Width="40"
                        Height="40"
                        RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="深度学习"
                        Margin="5,5,0,0"
                        FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- 参数设置按钮 -->
            <Button Name="参数"
                    Click="SettingsButton_Click"
                    DockPanel.Dock="Left"
                    Style="{StaticResource IconButtonStyle}"
                    Margin="10,0">
                <StackPanel Orientation="Vertical">
                    <Image Source="Images/停止.png" 
                        Width="40"
                        Height="40"
                        RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="参数"
                        Margin="5,5,0,0"
                        FontSize="14"/>
                </StackPanel>
            </Button>

        </DockPanel>

        <!-- 内容区域 -->
        <Grid Grid.Row="1"
              Grid.Column="0"
              Background="AntiqueWhite">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Border Name="左视窗"
                    Grid.Column="0"
                    Background="Beige" 
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="10"
                    MinWidth="200">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- 总体统计 -->
                        <Expander Header="数据统计" IsExpanded="True">
                            <Grid Background="AliceBlue"
                                  UseLayoutRounding="True">
                                <Grid.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="#DDD"/>
                                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        <!-- 右+下边框 -->
                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Grid.Column="0"
                                        BorderThickness="1"
                                        BorderBrush="#333333">
                                    <Label Content="总数"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="0"
                                        BorderThickness="1"
                                        BorderBrush="#333333">
                                    <Label Content="合格率"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="0"
                                        BorderThickness="1"
                                        BorderBrush="#333333">
                                    <Label Content="产能（个/分钟）"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="0"
                                        BorderThickness="1"
                                        BorderBrush="#333333">
                                    <Label Content="OK数量"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="0"
                                        BorderThickness="1"
                                        BorderBrush="#333333">
                                    <Label Content="NG数量"/>
                                </Border>
                                <Border Grid.Row="5" Grid.Column="0"
                                        BorderThickness="1"
                                        BorderBrush="#333333">
                                    <Label Content="回收数量"/>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="1"
                                        BorderThickness="1"
                                        BorderBrush="#333333">
                                    <Label Content="1"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="1"
                                        BorderThickness="1"
                                        BorderBrush="#333333">
                                    <Label Content="90%"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="1"
                                        BorderThickness="1"
                                        BorderBrush="#333333">
                                    <Label Content="1000"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="1"
                                        BorderThickness="1"
                                        BorderBrush="#333333">
                                    <Label Content="900"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="1"
                                        BorderThickness="1"
                                        BorderBrush="#333333">
                                    <Label Content="100"/>
                                </Border>
                                <Border Grid.Row="5" Grid.Column="1"
                                        BorderThickness="1"
                                        BorderBrush="#333333">
                                    <Label Content="50"/>
                                </Border>
                            </Grid>
                        </Expander>
                        <!-- 相机1 -->
                        <Expander Header="相机1统计">
                            <Grid>
                            </Grid>
                        </Expander>
                        <!-- 相机2 -->
                        <Expander Header="相机2统计">
                        </Expander>

                        <!-- 相机3-6（结构相同） -->
                        <Expander Header="相机3统计">
                            <!-- 内容区域 -->
                        </Expander>
                        <Expander Header="相机4统计">
                            <!-- 内容区域 -->
                        </Expander>
                        <Expander Header="相机5统计">
                            <!-- 内容区域 -->
                        </Expander>
                        <Expander Header="相机6统计">
                            <!-- 内容区域 -->
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <Border Name="主视窗"
                    Grid.Column="1"
                    Background="Beige" 
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="10"
                    MinWidth="600">
                            <TextBlock Text="主视窗" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="DarkGray"/>
            </Border>
            <Border Name="右视窗"
                    Grid.Column="2"
                    Background="Beige" 
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Margin="10"
                    MinWidth="200">
                            <TextBlock Text="右视窗" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="DarkGray"/>
            </Border>
        </Grid>
    </Grid>
</Window>